{
  "name" : "Bookmark youtube extension",
  "version": "0.1.0",
  "description": "Helps you to bookmark timestamp",
  "permissions" : ["storage", "tabs"],
  "host_permissions" : ["https://*.youtube.com/*"],
  "background": {
    "serviceworker" : "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js" : ["contentScript.js"]
    }
  ],
  "web_accessible_resources" : [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Bookmark youtube extension",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}